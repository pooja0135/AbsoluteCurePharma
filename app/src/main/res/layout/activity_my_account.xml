<?xml version="1.0" encoding="utf-8"?>
<layout >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@drawable/gradient"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/purple_500"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp">


                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_back"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp" />

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_marginTop="@dimen/_minus10sdp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/boy"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp" />

                <com.absolutecurepharma.customecomponent.CustomTextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/tvName"
                    android:textColor="@color/white"
                    android:text="Pooja Singh"
                    app:font_name="NunitoBold.ttf"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.absolutecurepharma.customecomponent.CustomTextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:id="@+id/tvPhone"
                    android:textColor="@color/white"
                    android:text="+918452639188"
                    app:font_name="NunitoRegular.ttf"
                    android:textSize="@dimen/_11sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.absolutecurepharma.customecomponent.CustomTextView
                    app:font_name="NunitoRegular.ttf"
                    android:gravity="center"
                    android:id="@+id/tvEmail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:text=""
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/rlEdit"
                    android:layout_marginLeft="@dimen/_130sdp"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp">

                    <ImageView
                        android:background="@drawable/pencil_edit"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_16sdp" />
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp">
                <com.absolutecurepharma.customecomponent.CustomTextView
                    android:layout_centerVertical="true"
                    app:font_name="NunitoRegular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:text="My Orders"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_10sdp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp">

                <com.absolutecurepharma.customecomponent.CustomTextView
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="My Addresses"
                    app:font_name="NunitoRegular.ttf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/rlChangePassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp">

                <com.absolutecurepharma.customecomponent.CustomTextView
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="Change Password"
                    app:font_name="NunitoRegular.ttf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</layout>
