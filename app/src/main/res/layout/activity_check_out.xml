<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:weightSum="10">
    <RelativeLayout
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_back"
            android:padding="@dimen/_10sdp"
            android:id="@+id/ivBack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivBack"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llcartItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_68sdp"
                    
                    android:orientation="vertical">

                
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Your Delivery Address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/location" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="Select Address"
                                android:id="@+id/tvName"
                                android:textColor="@color/black"
                               />

                        </LinearLayout>

                        <TextView
                            android:padding="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="Change"
                            android:id="@+id/tvChange"
                            android:textColor="@color/red_900"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:maxLines="2"
                        android:text="No Address Selected"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_12sdp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text=""
                        android:id="@+id/tvPhoneNumber"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/_10sdp"
                      />

                  

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        >



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:text="CART ITEM(0)"
                            android:id="@+id/tvCartItemCount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                             />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/recyclerview"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                       >
                    </LinearLayout>


                



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:text="PRICE DETAILS"
                            android:textColor="@color/grey_600"
                            android:textSize="@dimen/_10sdp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_width_small"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/grey_400" />
                        <RelativeLayout
                            android:id="@+id/rr1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v1">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Price"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                               />

                            <TextView
                                android:id="@+id/tvItemCount"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_toRightOf="@+id/textView12"
                                android:gravity="center_vertical"
                                android:text="(2 Items)"
                                android:textSize="@dimen/_10sdp"
                               />

                          

                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:paddingRight="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_below="@+id/tvPrice"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:visibility="gone" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/rr1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Delivery"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                               />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:paddingRight="@dimen/_10sdp"
                                android:text=""
                                android:id="@+id/tvDelCharges"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                />

                        </RelativeLayout>



                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_width_small"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@color/grey_400" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/rr1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Total GST"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:id="@+id/tvGST"
                                android:text=""
                                android:paddingRight="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                 />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Amount Payable"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                />
                            <TextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:paddingRight="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold"
                              />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_width_small"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/grey_400" />
                        <RelativeLayout
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:id="@+id/tvSave"
                                android:text="You will save \u20b9 0 on this order."
                                android:textColor="@color/green_600"
                                android:textSize="@dimen/_10sdp"
                                />
                        </RelativeLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:text="PAYMENT MODE"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_10sdp"
                       />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_width_small"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/grey_400" />

                    <RelativeLayout

                        android:id="@+id/rrCod"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@color/white"
                        android:elevation="@dimen/_3sdp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:srcCompat="@drawable/ic_radio_button_checked" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Cash on Delivery"
                            android:textSize="@dimen/_12sdp"
                            android:tag="Selected"
                            android:textColor="@color/black"
                            android:paddingLeft="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:layout_toLeftOf="@+id/imageView8"
                            android:layout_toStartOf="@+id/imageView8"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:id="@+id/rrOnline"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@color/white"
                        android:elevation="@dimen/_3sdp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:srcCompat="@drawable/ic_radio_button_unchecked" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Credit/Debit/Atm card"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:paddingLeft="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:layout_toLeftOf="@+id/imageView9"
                            android:layout_toStartOf="@+id/imageView9"
                            />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/black"
            android:elevation="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvFinalprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="\u20B9 1299"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvProceed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:gravity="center"
                android:text="CONTINUE"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/layout_cart_empty"
        android:visibility="gone"
        layout="@layout/empty_message_layout_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>