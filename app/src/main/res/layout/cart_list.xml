<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/llMain"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:weightSum="2.2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp">
    <LinearLayout
        android:layout_weight=".5"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            >
            <ImageView
                android:id="@+id/ivSubcategory"
                android:layout_gravity="center"
                android:src="@drawable/placeholder"
                android:padding="@dimen/_3sdp"
                android:scaleType="fitXY"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
        android:layout_marginLeft="@dimen/_5sdp"
        android:id="@+id/tvSubcategoryname"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_3sdp"
            android:text="Paracetamol 500mg Jar Of 1000 Tablets"
        android:textSize="@dimen/_11sdp"
        />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="By Alkem Laboratories Ltd."
            android:textColor="@color/grey_600"
            android:textSize="@dimen/_9sdp"
            />

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="1000 Tablet(s) in Jar"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/_8sdp"

            />


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/tvFinalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:singleLine="true"
                    android:text="\u20B9320"
                    android:textColor="@color/green_700"
                    android:textSize="@dimen/_10sdp"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/tvFinalprice"
                        android:singleLine="true"
                        android:text="\u20B9400"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:background="@drawable/discount"
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="20%off"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7sdp" />



                </LinearLayout>



            </LinearLayout>



        </RelativeLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">

            <ImageButton
                android:id="@+id/ivMinus"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/minus_circle"
                android:background="@null"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/cart_item_number"
                android:text="1"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/ivPlus"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/plus_circle"
                android:background="@null"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_weight=".3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp">
        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="end"
            android:id="@+id/ivDelete"
            android:clickable="true"
            app:srcCompat="@drawable/ic_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
    
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@color/grey_300"/>

</LinearLayout>
