<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black_trans">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:background="@drawable/dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            >

            <TextView
                android:id="@+id/tvAlertMsg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:text="Confirmation Alert"
              android:background="@color/purple_500"

                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tvAlertMsg"
                android:background="@color/grey_700" />

            <RelativeLayout
                android:id="@+id/rr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:minHeight="@dimen/_50sdp"
                    android:textColor="@color/grey_400"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_10sdp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rr"
                android:background="@color/grey_100" />

            <TextView
                android:id="@+id/tvcancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:contentDescription="@null"
                android:gravity="center"
                android:text="NO"
                android:textColor="@color/red_900"
                android:textSize="@dimen/_11sdp"
                android:layout_below="@+id/rr"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/view4"
                android:layout_toEndOf="@+id/view4"
                />

            <View
                android:id="@+id/view4"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:background="@color/grey_100" />

            <TextView
                android:id="@+id/tvOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:contentDescription="@null"
                android:gravity="center"
                android:layout_below="@+id/view"
                android:text="YES"
                android:textColor="@color/green_600"
                android:textSize="@dimen/_11sdp"
                android:layout_toLeftOf="@+id/view4"
                android:layout_toStartOf="@+id/view4"
                 />

        </RelativeLayout>



    </RelativeLayout>

    </ScrollView>

</LinearLayout>